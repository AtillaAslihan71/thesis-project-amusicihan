<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

<header>
    <nav class="container">
        <div class="roww">
            <div class="logo">
                <img src="~/assets/image/IS2 1.png" alt="Logo">
            </div>
            <div class="header-login-register">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="header-register">
                        <a asp-controller="Account" asp-action="Profile"><p>@User.Identity.Name</p></a>
                    </div>
                }
                else
                {
                    <div class="header-login">
                        <img src="~/assets/image/Music.svg" alt="">
                        <a asp-controller="Account" asp-action="Login"><p>Login</p></a>
                        <p>|</p>
                    </div>
                    <div class="header-register">
                        <a asp-controller="Account" asp-action="Register"><p>Register</p></a>
                    </div>
                }
            </div>

        </div>
    </nav>
</header>
            @RenderBody()
    
<footer>
    <div class="container">
        <div class="roww">
            <div class="logo">
                <img src="~/assets/image/ISt2 2.svg" alt="">
            </div>
            <div class="icons">
                <img src="~/assets/image/Instagram.svg" alt="">
                <img src="~/assets/image/facebook-svgrepo-com.svg" alt="">
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="text roww">
                <p>All rights reserved</p>
                <a asp-controller="TermsConditions" asp-action="Index"><p>Terms & Conditions</p></a>
            </div>
        </div>
    </div>
</footer>

<script src="~/assets/js/script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>