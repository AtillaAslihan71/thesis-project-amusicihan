                    </div>
                    <div class="people-likes">
                        <p>
                            @foreach (var usergenre in @Model.UserGenres.Where(ug=>ug.GenreId==@Model.Genre.Id))
                            {
                                likecount++;
                            }
                            
                           @likecount people likes
                        </p>
                    </div>
                </div>
                <div class="col-md-4 col-12 w">
