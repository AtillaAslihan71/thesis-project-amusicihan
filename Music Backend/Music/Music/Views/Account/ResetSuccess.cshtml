
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<header>
    <div class="container login">
        <a asp-controller="Home" asp-action="Index">
            <img src="~/assets/image/ISt2 1.svg" alt="">
        </a>
        <hr>
    </div>
</header>

<section id="confirm-email">
    <div class="container">
        @if (User.Identity.IsAuthenticated)
        {
            <p>@User.Identity.Name - Your password has been updated !</p>
        }
        else
        {
            <p>Your password has been updated !. Go to the <a asp-controller="Account" asp-action="Login">login</a> page.</p>
        }
    </div>
</section>

<footer>
    <div class="container login">
        <div class="row">
            <hr>
        </div>
    </div>
</footer>
</body>
</html>