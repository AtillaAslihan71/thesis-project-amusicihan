@model ForgetPassViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forget password</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="container login">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/assets/image/ISt2 1.svg" alt="">
            </a>
            <hr>
        </div>
    </header>

    <section id="login">
        <div class="login col-12">
            <div class="container">
                <div class="header">
                    <h4>Login</h4>
                    <hr>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form">
                    <form method="post" asp-controller="Account" asp-action="ForgetPass">
                        <label asp-for="Email">Email or username</label>
                        <input asp-for="Email" autocomplete="off">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        

                        <div class="lgn">
                            
                            <button class="loginbtn lg" type="submit">
                                <div class="login-btn">
                                    Send
                                </div>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container login">
            <div class="row">
                <hr>
            </div>
        </div>
    </footer>
</body>
</html>