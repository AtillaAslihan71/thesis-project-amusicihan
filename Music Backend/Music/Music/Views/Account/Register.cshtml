@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="container register">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/assets/image/ISt2 1.svg" alt="">
            </a>
            <hr>
        </div>
    </header>

    <section id="register">
        <div class="register col-12">
            <div class="container">
                <div class="header">
                    <h4>Register</h4>
                    <hr>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form">
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <label asp-for="Email">Email</label>
                        <input autocomplete="off" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>

                        <label asp-for="Username">Username</label>
                        <input asp-for="Username" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Username"></span>

                        <label asp-for="Name">Name</label>
                        <input asp-for="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>

                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname">
                        <span class="text-danger" asp-validation-for="Surname"></span>

                        <label asp-for="Password">Password</label>
                        <input asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>

                        <button type="submit" class="registerbtn">
                            <div class="register-btn">
                                Register
                            </div>
                        </button>
                    </form>
                </div>
                <div class="links">
                    <hr>
                    <p>Do you have an account?</p>
                    <a asp-controller="Account" asp-action="Login">
                        <div class="login-btn">
                            Login
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div class="container register">
            <div class="row">
                <hr>
            </div>
        </div>
    </footer>
</body>
</html>