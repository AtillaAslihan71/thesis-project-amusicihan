@model TermsConditionsCreateViewModel
@{
    ViewData["Title"] = "Admin - Terms & Conditions - Create";
    ViewData["Active-TermsCond"] = "active";
}

<div class="rightSide">
    <div class="admin-detail">
        <div id="first" class="content">
            <div class="header">
                <p>Terms & Conditions - Create</p>
            </div>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" asp-controller="TermsConditions" asp-action="Create">

                <label asp-for="Text">Terms & Conditions</label><br>
                @*<input  asp-for="Text" required autocomplete="off">*@
                <textarea id="termsconditions" asp-for="Text" autocomplete="off" class="form-control form-control-user text-center" style="color: black !important;font-size: 15px;"
                          ></textarea>
                <span class="text-danger" asp-validation-for="Text"></span>
                <br>


                <button type="submit">Create</button>
            </form>


        </div>
    </div>
</div>


@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor5/32.0.0/ckeditor.min.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#termsconditions')).catch(error => {
            console.error(error);
        });
    </script>

}