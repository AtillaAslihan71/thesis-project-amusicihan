<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>

    <header>
        <nav class="container">
            <div class="roww">
                <div class="logo">
                    <a asp-area="Default" asp-controller="Home" asp-action="Index">
                        <img src="~/admin/assets/image/IS2 1.png" alt="Logo">
                    </a>
                </div>
                <div class="header-login-register">
                    <div class="header-login">
                        <div class="dropdown">
                            <button class="dropbtn">@User.Identity.Name</button>
                            <div class="dropdown-content">
                                <a asp-area="Default" asp-controller="Account" asp-action="Profile">Profile</a>
                                <a asp-area="Default" asp-controller="Account" asp-action="Logout">Logout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <section id="admin-panel">

        <div class="leftSide col-md-4 profile-tab-nav border-right">

            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                <a class="nav-link @ViewData["Active-Main"]" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">

                    <li>
                        <img src="~/admin/assets/image/DogHouse.svg" alt="">
                        Main
                    </li>
                </a>
                <a class="nav-link @ViewData["Active-TermsCond"]" asp-area="Admin" asp-controller="TermsConditions" asp-action="Index">

                    <li>
                        <img src="~/admin/assets/image/DogHouse.svg" alt="">
                        Terms & Conditions
                    </li>
                </a>
                <a class="nav-link @ViewData["Active-Playlists"]" asp-area="Admin" asp-controller="Playlists" asp-action="Index">

                    <li>
                        <img src="~/admin/assets/image/DogHouse.svg" alt="">
                        Playlists
                    </li>
                </a>
                <a class="nav-link @ViewData["Active-Genres"]" asp-area="Admin" asp-controller="Genres" asp-action="Index">

                    <li>
                        <img src="~/admin/assets/image/DogHouse.svg" alt="">
                        Genres
                    </li>
                </a>
                <a class="nav-link @ViewData["Active-FAQS"]" asp-area="Admin" asp-controller="Faqs" asp-action="Index">

                    <li>
                        <img src="~/admin/assets/image/DogHouse.svg" alt="">
                        FAQs
                    </li>
                </a>
                <a class="nav-link @ViewData["Active-Users"]" asp-area="Admin" asp-controller="Users" asp-action="Index">

                    <li>
                        <img src="~/admin/assets/image/DogHouse.svg" alt="">
                        Users
                    </li>
                </a>

            </div>
        </div>
        <div class="rightSide col-md-8  p-4 p-md-5">
            @RenderBody()
        </div>
    </section>
    <footer>
        <div class="container">
            <div class="roww">
                <div class="logo">
                    <img src="~/admin/assets/image/ISt2 2.svg" alt="">
                </div>
                <div class="icons">
                    <img src="~/admin/assets/image/Instagram.svg" alt="">
                    <img src="~/admin/assets/image/facebook-svgrepo-com.svg" alt="">
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="text roww">
                    <p>All rights reserved</p>
                    <a asp-area="Default" asp-controller="TermsConditions" asp-action="Index"><p>Terms & Conditions</p></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>