@model IEnumerable<Faq>
@{
    ViewData["Title"] = "Admin - Faqs";
    ViewData["Active-FAQS"] = "active";
    int count = 1;
}

<div class="rightSide">
    <div class="admin-detail">
        <div id="first" class="content">
            <div class="header admin-create-area">
                <div class="admin-title"><p>FAQ's</p></div>
                <div class="admin-create-btn"><a asp-controller="Faqs" asp-action="Create">Create</a></div>
            </div>

            
            
            <table class="text-center">
                <tr style="border-bottom:1px solid white ;">
                    <th>#</th>
                    <th style="width: 580px;">Question</th>
                    <th style="width: 580px;">Answer</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td style="width: 580px;">@item.Question</td>
                        <td style="width: 580px;">@item.Answer</td>
                        <td class="d-flex">
                            <a class="btn btn-primary" asp-controller="Faqs" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-primary" asp-controller="Faqs" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>

                    count++;
                }


            </table>
            


        </div>
    </div>
</div>